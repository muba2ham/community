        <item name="boxStrokeColor">@color/red</item>

        <item name="boxStrokeErrorColor">@color/red</item>
    </style>

    <style name="CustomBottomSheetDailog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="behavior_draggable">false</item>
        <!--        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>-->
